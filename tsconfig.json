{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020", "DOM"],
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "jsxImportSource": "@tarojs/react",
      "resolveJsonModule": true,
      "noEmit": false,
      "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*", "src/mocks", "**/*.stories.*", "src/__tests__", "coverage"]
  }